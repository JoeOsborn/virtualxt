#!/bin/sh

SELF_DIR="$(dirname "$(readlink -f "$0")")"
LIBS_PATH="$SELF_DIR/usr/lib:$SELF_DIR/usr/lib/x86_64-linux-gnu"

if [ -z "$LD_LIBRARY_PATH" ]; then
  LD_LIBRARY_PATH="$LIBS_PATH"
else
  LD_LIBRARY_PATH="$LIBS_PATH:$LD_LIBRARY_PATH"
fi

export LD_LIBRARY_PATH

export VXT_DEFAULT_BIOS_PATH=$SELF_DIR/bios/pcxtbios.bin
export VXT_DEFAULT_FLOPPY_IMAGE=$SELF_DIR/boot/freedos.img

exec "$SELF_DIR/virtualxt" "$@"